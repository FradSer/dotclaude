{
  "description": "Git plugin hooks for commit message validation",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash ${CLAUDE_PLUGIN_ROOT}/hooks/scripts/validate-conventional-commit.sh",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
