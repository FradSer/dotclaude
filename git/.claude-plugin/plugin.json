{
  "name": "git",
  "version": "0.2.0",
  "description": "Conventional Git automation and advanced repository management",
  "author": {
    "name": "Frad LEE",
    "email": "fradser@gmail.com"
  },
  "license": "MIT",
  "keywords": ["git", "conventional-commits", "automation", "workflow", "version-control"],
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "once": false,
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/scripts/validate-commit-pretool.sh",
            "timeout": 10
          }
        ]
      }
    ]
  }
}
