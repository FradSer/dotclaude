{
  "description": "Automated checks for Office plugin requirements",
  "hooks": {
    "UserPromptSubmit": [
      {
        "matcher": "(?i)(patent|prior art|invention|search patents|专利|office:patent-architect)",
        "hooks": [
          {
            "type": "command",
            "command": "${CLAUDE_PLUGIN_ROOT}/hooks/scripts/check-keys.sh"
          }
        ]
      }
    ]
  }
}